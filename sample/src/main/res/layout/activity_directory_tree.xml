<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/indigo"
    tools:context="com.cheng.treelayoutdemo.DirectoryTreeActivity">

    <com.cheng.treelayout.TreeLayout
        android:id="@+id/tl_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Header - 0"
            android:textAllCaps="false"
            app:itemType="header"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Header - 1"
            android:textAllCaps="false"
            app:itemType="header"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1-TEST_NORMAL_ITEM"
            app:indentLevel="1"
            app:itemType="normal"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2-=====LABEL====="
            app:indentLevel="2"
            app:itemType="label"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:indentLevel="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center_vertical"
                android:text="测试一下 branchTargetIndex "
                android:background="@color/yellow"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:text="这是横枝的目标Target"
                android:background="@color/green"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center_vertical"
            android:text="3-TEST_offsetTargetTop = 0"
            android:background="@color/red"
            app:indentLevel="3"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="4-TEST_NORMAL_ITEM"
            app:indentLevel="4"
            app:itemType="normal"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:text="5-TEST_NORMAL_ITEM"
            android:background="@color/green"
            app:indentLevel="0"
            app:itemType="normal"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="6-TEST_NORMAL_ITEM"
            app:indentLevel="0"
            app:itemType="normal"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:text="7-TEST_NORMAL_ITEM"
            android:background="@color/blue"
            app:indentLevel="0"
            app:itemType="normal"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="8-=====LABEL====="
            app:indentLevel="0"
            app:itemType="label"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="9-TEST_NORMAL_ITEM"
            app:indentLevel="1"
            app:itemType="normal"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="10-TEST_NORMAL_ITEM"
            app:indentLevel="2"
            app:itemType="normal"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="11-=====LABEL====="
            app:indentLevel="2"
            app:itemType="label"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Footer - 1"
            android:textAllCaps="false"
            app:indentLevel="0"
            app:itemType="footer"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Footer - 0"
            android:textAllCaps="false"
            app:indentLevel="0"
            app:itemType="footer"/>
    </com.cheng.treelayout.TreeLayout>

</LinearLayout>
